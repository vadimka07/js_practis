header
    background-color: var(--colorWhite)
    position: fixed
    left: 0
    right: 0
    top: 0
    height: 80px
    display: flex
    align-items: center
    z-index: 10
    border-bottom: 1px solid var(--borderHeader)
    @media tablet
        height: auto //10.47vw

        
    .wrapper
        display: flex
        align-items: center
        justify-content: space-between
        nav
            display: flex
            justify-content: space-between
            width 35%
            @media tablet
                display: flex
                justify-content: space-between
                flex-basis: 70%
                align-items: center
            @media mobile768
                flex-basis: 100%
                width:100%
.main-header
    @media mobile480
        height 13vw
    &__menu
        display: flex
        flex-basis: 100%
        justify-content: space-between
        @media mobile480
            background-color: var(--colorWhite)
            position absolute
            left 0
            right 0
            top: 13vw
            padding: 10vw
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.04), 0px 2px 4px rgba(0, 0, 0, 0.08), 0px 1px 3px rgba(0, 0, 0, 0.16)
            flex-direction: column
            transform scale(1)
            visibility visible
            transition visibility, transform, .3s
            align-items center
    &--is-hidden
        @media mobile480
            visibility hidden
            transform scale(0)
            visibility: hidden
            opacity: 0
            pointer-events: none

.logo
    text-decoration: none
    font-family: var(--ffLogo)
    color: var(--colorBlackMenu)
    font-size: 26px
    line-height: floor((31 / 26), 2)
    letter-spacing: 0.03em
    margin-right: 93px
    @media tablet
        font-size: 3.22vw
        margin-right: 11.5vw
    @media mobile768
        margin-right: 10.7vw
    @media mobile480
        font-size:5.02vw
        margin-right: 0;
    
    &--blue-color
        color: var(--partColorLogoBlue)

.mobile-menu
    &--toggle
        @media mobile480
            border: none
            background: none
    &__icon-close
        display none
    &__is-open
        .mobile-menu__icon-close
            display block
        .mobile-menu__icon-open
            display none
.main-menu
    display: flex
    align-items: center
    justify-content: space-between
    flex: 1 0 70%
    @media tablet
        flex: none
        flex-basis: 57%
    @media mobile768
        flex-basis: 80%
    @media mobile480
        flex-direction: column
        flex-basis: 100%
    
    &__item
        @media mobile480
            margin-bottom: 3.9vw
        a
            text-decoration: none
            color: var(--colorBlackMenu)
            transition: 0.3s
            font-family: var(--ffMedium)
            padding: 31px 0
            position: relative
            @media tablet
                padding: 4.1vw 0
                font-size: 1.9vw
                display: block
            @media mobile480
                padding: 2.9vw 0
                font-size: 4.4vw
            &:after
                content: ""
                width: 0
                height: 4px
                background-color: var(--colorButton)
                z-index: 11
                display: block
                position: absolute
                bottom: 0
                border-radius: 2px
                transition: width, cubic-bezier(0.4, 0, 0.2, 1) 0.25s
                @media tablet
                    bottom: -1px
                @media mobile480
                    bottom 0
            &:focus
                color: var(--colorMenuHover)
                &:after
                    width: 100%
        &:hover
            .main-menu__link
                &:after
                    width: 100%
                color: var(--colorMenuHover)
        
        
        &--current
            .main-menu__link
                color: var(--colorMenuHover)
                &:after
                    width: 100%



.communication
    display: flex
    align-items: center
    justify-content: space-between
    @media tablet
        width: auto
        flex-direction: column
        align-items: flex-start
        justify-content center
    @media mobile480
        align-items center
        margin-top: 4vw
    &__icon
        margin-right: 10px
        fill: var(--colorlinkHeader)
        transition: 0.3s
    &__list-item
        &:hover
            .communication__icon
                fill: var(--colorMenuHover)
        &:first-child
            margin-right: 30px
            @media tablet
                margin-right: auto
        @media mobile768
            margin-top: 0.8vw
        @media mobile480
            margin:0 auto
    
    &__link
        text-decoration: none
        color: var(--colorlinkHeader)
        transition: 0.3s
        font-family: var(--ffMedium)
        font-size: 14px
        line-height: floor((16 / 14), 2)
        letter-spacing: 0.02em
        display: flex
        align-items: center
        @media tablet
            font-size: 1.6vw
            line-height: 2
        @media mobile480
            font-size:3.8vw
        &:focus
        &:hover
            color: var(--colorMenuHover)
        &:focus
            .communication__icon
                fill: var(--colorMenuHover)