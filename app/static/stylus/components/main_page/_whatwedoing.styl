.what-we-doing
    @media mobile480
        display none
    &__list-items
        display: flex
        flex-wrap: wrap
        margin: 50px -15px 0
        @media tablet
            margin: 5.04vw -15px 0
    &__list-item
        width: calc(100% / 3 - 30px)
        margin: 0 15px
        position: relative
        overflow: hidden
        &:hover
            .what-we-doing__item-text
                transform: translateY(0)
    
    &__item-text
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        padding: 27px 25px
        color: var(--colorWhite)
        transform: translateY(75%)
        background-color: rgba(47, 48, 58, 0.8)
        transition: 0.3s
        @media tablet
            padding: 2vw 2.8vw
        
        h3
            color: var(--colorWhite)
            text-transform: uppercase
            font-size: 14px
            line-height: floor((16 / 14), 2)
            font-weight: bold
            letter-spacing: 0.03em
            text-align: center
            @media tablet
                font-size: 1.5vw