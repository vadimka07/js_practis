.customers
    &__list
        display: flex
        flex-wrap: wrap
        margin: 20px -15px 0
        @media mobile768
            margin: 0 -15px 0
    &__list-item
        width: calc(100% / 6 - 30px)
        text-align: center
        height: 90px
        margin: 30px 15px 0
        transition: 0.7s
        @media tablet
            width: calc(100% / 4 - 30px)
        @media mobile768
            width: calc(100% / 3 - 30px)
        @media mobile480
            width: calc(100% / 2 - 30px)
            height: 20vw
            margin: 25px 15px 0
    
    
    &__link-item
        transition: 0.3s
        fill: var(--colorSocialIcon)
        width: 100%
        height: 100%
        border-radius: 4px
        border: 1px solid var(--colorSocialIcon)
        display: flex
        align-items: center
        justify-content: center

        &:hover
        &:focus
            border-color: var(--colorButton)
            .customers__icon-clients
                fill: var(--colorButton)
                transition: 0.3s
    &__icon-clients
        @media mobile480
            height: 10vw