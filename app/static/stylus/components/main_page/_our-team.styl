.our-team
    background-color: var(--bgColorOurTeamSection)
    &__list-items
        display: flex
        flex-wrap: wrap
        margin: 20px -15px 0
        @media mobile768
            margin: 0 -15px 0
    &__list-item
        width: calc(100% / 4 - 30px)
        margin: 30px 15px 0
        min-height: 428px
        background-color: var(--colorWhite)
        border-radius: 4px
        box-shadow: var(--boxShadowCardItemOurCompany)
        @media tablet
            width: calc(100% / 3 - 30px)
            padding-bottom: 2vw
            min-height: auto
        @media mobile768
            width: calc(100% / 2 - 30px)
            padding-bottom: 7.5vw
        @media mobile480
            width: 100%
            padding-bottom: 10.5vw
    &__image
        @media tablet
            object-fit: cover
            width: 100%
        @media mobile768
            height: 78%
    &__list-social-icons
        display: flex
        justify-content: space-evenly
        margin-top: 16px
        @media tablet
            margin-top: 1.7vw
        @media mobile768
            margin-top: 2.5vw
            padding: 0 8.2vw
        @media mobile480
            padding 0 17.2vw
    h3
    p
        font-size: 16px
        line-height: floor((19 / 16), 2)
        text-align: center
        letter-spacing: 0.03em
        margin-top: 10px
        @media tablet
            font-size: 1.8vw
            margin-top: 1.2vw
        @media mobile768
            font-size: 2.1vw
            margin-top: 1.2vw
        @media mobile480
            font-size 3.5vw
        
    
    h3
        margin-top: 30px
        text-transform: capitalize
        @media tablet
            margin-top: 3vw
        @media mobile768
            margin-top: 3.8vw
        @media mobile480
            margin-top: 9vw
    &__social-icon
        &:hover
            .our-team__social-icon-link
                background-color: var(--colorbuttonActive)
                fill: var(--colorWhite)
    &__social-icon-link
        color: var(--colorSocialIcon)
        width: 44px
        height: 44px
        border-radius: 100%
        display: flex
        align-items: center
        justify-content: center
        transition: 0.2s
        fill: var(--colorSocialIcon)
        &:focus
            background-color: var(--colorbuttonActive)
            .our-team__icon
                fill: var(--colorWhite)