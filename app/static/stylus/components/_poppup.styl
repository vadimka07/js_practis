/*Popup*/
.popup
    position: fixed
    top: 0
    right: 0
    left: 0
    bottom: 0
    padding: 40px
    margin: auto
    max-width: 560px
    background: var(--colorWhite)
    width: 100%
    max-height: 60vh
    overflow-y: scroll
    -webkit-appearance: none
    -ms-overflow-style: none
    overflow: -moz-scrollbars-none
    overflow-y: -moz-hidden-unscrollable
    transform: translate(0%, 0%)
    //transition: transform cubic-bezier(0.4, 0, 0.2, 1) 0.25s
    transition: cubic-bezier(0.4, 0, 0.2, 1) transform, opacity, visibility, 0.25s
    visibility: visible
    opacity: 1
    z-index 10
    &::-webkit-scrollbar
        width: 0
    @media mobile768
        max-height: 96vh
        width: 90%
    @media mobile480
        width: 92%
        max-height: 95vh
    &__form
        display block
    &__form-label
        display: flex
        flex-direction: column
        align-items: flex-start
        margin-top: 10px
        font-size: 12px
        line-height: floor((14 / 12), 2)
        color: var(--colorText)
    .form__textarea
        margin-top: 30px
    &__text
        font-size: 20px
        line-height: floor((23 / 20), 2)
        text-align: center
        font-family: "RobotoBold"
        color: var(--colorTitle)
        letter-spacing: 0.03em
    &__form-input
    &__form-textarea
        width: 100%
        border: 1px solid var(--colorBorderPopupField)
        box-sizing: border-box
        border-radius: 4px
        height: 40px
        margin-top: 4px
        padding: 0 32px
    &__form-input
